{
  "manifest_version": 3,
  "name": "Fuzzy Tabber",
  "description": "Quickly switch between tabs with a keyboard-navigatable fuzzy finder.",
  "version": "1.0",
  "permissions": ["tabs", "scripting", "<all_urls>", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": "Ctrl+Shift+A",
      "description": "Open the fuzzy finder."
    }
  },
  "action": {}
}
